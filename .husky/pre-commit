#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "\033[1;38;5;105m‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó\033[0m"
echo "\033[1;38;5;105m‚ïë                                                ‚ïë\033[0m"
echo "\033[1;38;5;105m‚ïë        ‚ú® JSCODEMY LINT CHECKER ‚ú®              ‚ïë\033[0m"
echo "\033[1;38;5;105m‚ïë                                                ‚ïë\033[0m"
echo "\033[1;38;5;105m‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù\033[0m"
echo ""
echo "\033[1;38;5;39mChecking code quality before commit...\033[0m"
echo "\033[1;38;5;245mRunning lint-staged to format and fix code\033[0m"
echo ""

# Run lint-staged
LINT_STAGED_EXIT_CODE=0
OUTPUT=$(npx lint-staged 2>&1) || LINT_STAGED_EXIT_CODE=$?

if [ $LINT_STAGED_EXIT_CODE -ne 0 ]; then
  echo ""
  echo "\033[1;38;5;196m‚ùå Linting failed!\033[0m"
  echo "\033[1;38;5;214m‚ö†Ô∏è  Please fix the issues before committing:\033[0m"
  echo ""
  echo "$OUTPUT"
  exit 1
else
  echo ""
  echo "\033[1;38;5;82m‚úÖ Code looks great!\033[0m"
  echo "\033[1;38;5;226müöÄ Proceeding with commit...\033[0m"
fi
